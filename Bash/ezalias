#### EZAlias ####
## This code makes it quick and easy to create new command aliases.
## by Jordan Saints, www.jordansaints.com

## addalias
# Add an alias in two ways: through program input, or stdin
function addalias(){
if [ "$1" != "" ]; then
    echo $1 >> ~/.bash_alias
    . ~/.bash_alias
    echo "Added $1 to ~/.bash_alias"
  else
    echo "Enter the alias name:"
    read NAME
    while [ "$NAME" == "" ]; do
      echo "Enter the alias name:"
      read NAME
    done
    echo "Enter the command you wish to alias:"
    read COMMAND
    while [ "$COMMAND" == "" ]; do
      echo "Enter the command you wish to alias:"
      read COMMAND
    done
    NEWALIAS="alias $NAME='$COMMAND'"
    echo $NEWALIAS >> ~/.bash_alias
    . ~/.bash_alias
    echo "Added $NEWALIAS to ~/.bash_alias"
  fi
}

